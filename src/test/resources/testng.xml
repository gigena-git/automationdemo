<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Automation Demo" parallel="true" thread-count="2">
  <groups>
    <run>
      <exclude name="broken"/>
    </run>
  </groups>
  <test name="Run tests with chrome on OS X">
    <parameter name="runEnv" value="REMOTE"/>
    <parameter name="runDriver" value="chrome"/>
    <parameter name="runVersion" value="66.0"/>
    <parameter name="runOs" value="OS X 10.12"/>
    <packages>
      <package name="com.mgigena.automationdemo.tests.desktop"/>
    </packages>
  </test>
  <test name="Run tests with firefox on Windows 10">
    <parameter name="runEnv" value="REMOTE"/>
    <parameter name="runDriver" value="firefox"/>
    <parameter name="runVersion" value="58.0"/>
    <parameter name="runOs" value="Windows 10"/>
    <packages>
      <package name="com.mgigena.automationdemo.tests.desktop"/>
    </packages>
  </test>
  <test name="Run mobile tests remotely">
    <parameter name="runEnv" value="REMOTE"/>
    <parameter name="appiumVersion" value="1.7.2"/>
    <parameter name="platformName" value="Android"/>
    <parameter name="platformVersion" value="7.1"/>
    <parameter name="deviceName" value="Samsung Galaxy S8 Plus GoogleAPI Emulator"/>
    <parameter name="browserName" value="Chrome"/>
    <packages>
      <package name="com.mgigena.automationdemo.tests.mobile"/>
    </packages>
  </test>
</suite>